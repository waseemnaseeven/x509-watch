# === Ports (host mapping) ===
PROMETHEUS_PORT=9090
ALERTMANAGER_PORT=9093
VAULT_PORT=8200
X509_WATCH_PORT=9101

# === Vault ===
VAULT_DEV_ROOT_TOKEN_ID=root
VAULT_DEV_LISTEN_ADDRESS=0.0.0.0:8200
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=root

# === x509-watch ===
X509_WATCH_LISTEN=:9101
X509_WATCH_CERT_DIR=/certs
X509_WATCH_INTERVAL=1m
X509_WATCH_LOG_LEVEL=info

# === Build args ===
GO_VERSION=1.22
VERSION=dev
REVISION=local
